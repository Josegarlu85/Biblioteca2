<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.AltasLibros"
             Title="Alta de Libros">

    <Grid>
        <Image Source="guardar.jpg" Aspect="AspectFill" Opacity="1" IsEnabled="False"/>

        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="20">

                <Label Text="Alta de Libros" FontSize="36" HorizontalOptions="Center" TextColor="Beige"/>

                
                <Entry x:Name="tituloEntry" Placeholder="TÃ­tulo" BackgroundColor="White"/>
                <Entry x:Name="autorEntry" Placeholder="Autor" BackgroundColor="White"/>
                <Entry x:Name="editorialEntry" Placeholder="Editorial" BackgroundColor="White"/>

                <!-- Frame con background color (AA inicial lo hace semitransparente) padding para evitar que el texto quede en el borde y margin (izquierda, arriba, derecha, abajo) para separarlo de lo anterior  -->
                <Frame BackgroundColor="#AA000000" Padding="5" HasShadow="False" Margin="0,10,0,0">
                    <Label Text="Portada del libro:" FontSize="20" TextColor="Beige"/>
                </Frame>

                <Image x:Name="portadaImage" HeightRequest="200" Aspect="AspectFit" BackgroundColor="BurlyWood"/>

                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Button Text="Guardar" Clicked="GuardarClicked" BackgroundColor="SaddleBrown" TextColor="Beige"/>
                    <Button Text="Limpiar" Clicked="LimpiarClicked" BackgroundColor="SaddleBrown" TextColor="Beige"/>
                    <Button Text="Seleccionar imagen" Clicked="SeleccionarImagenClicked" BackgroundColor="SaddleBrown" TextColor="Beige"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
