<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Biblioteca.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Biblioteca"
    Title="Biblioteca"
    Shell.TabBarBackgroundColor="SaddleBrown"
    Shell.TabBarForegroundColor="Beige"
    Shell.TabBarTitleColor="Beige"
    Shell.TabBarUnselectedColor="BurlyWood">


    <TabBar>

        <ShellContent
            Title="Inicio"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Alta"
            Icon="add.png"
            ContentTemplate="{DataTemplate local:AltasLibros}"
            Route="AltasLibros" />

        <ShellContent
            Title="Consulta"
            Icon="search.png"
            ContentTemplate="{DataTemplate local:ConsultasLibros}"
            Route="ConsultasLibros" />

    </TabBar>
</Shell>
